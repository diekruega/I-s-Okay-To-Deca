            --border-color: #e6ecf0;
            --text-color: #14171a;
            --secondary-text-color: #657786;
            --prompt-background-color: #f5f8fa;
            --font-family: Arial, sans-serif;
        }

        body {
            font-family: var(--font-family);
            margin: 0;
            padding: 0;
            background-color: var(--background-color);
            color: var(--text-color);
        }

        header {
            background-color: var(--primary-color);
            color: white;
            padding: 1rem;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .container {
            max-width: 600px;
            margin: 2rem auto;
            background: var(--background-color);
            padding: 1rem;
            border: 1px solid var(--border-color);
            border-radius: 10px;
        }

        textarea {
            width: 100%;
            height: 100px;
            border: 1px solid var(--border-color);
            border-radius: 5px;
            padding: 10px;
            resize: none;
            font-size: 1rem;
            color: var(--text-color);
            background-color: var(--prompt-background-color);
        }

        textarea:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 5px rgba(29, 161, 242, 0.5);
        }

        button {
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 5px;
            padding: 0.5rem 1rem;
            font-size: 1rem;
